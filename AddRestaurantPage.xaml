<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Finalwork1.AddRestaurantPage"
             Title="Добавить Ресторан">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Имя Ресторана"
                   FontSize="20" />
            <Entry x:Name="NameEntry" Placeholder="Введите имя ресторана" />

            <Label Text="Описание Ресторана"
                   FontSize="20" />
            <Editor x:Name="DescriptionEditor" Placeholder="Введите описание ресторана" />

            <Button Text="Добавить Ресторан"
                    Clicked="OnAddRestaurantClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
